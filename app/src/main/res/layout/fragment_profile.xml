<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.ProfileFragment">


    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/profileHeader">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_centerHorizontal="true"
                android:foreground="@drawable/customborder"
                android:id="@+id/ivProfilePic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/ivProfilePic"
                android:id="@+id/tvUsername"
                tools:text="ayisatpade"
                android:textSize="30dp"
                android:fontFamily="sans-serif-condensed-medium"/>

            <TextView
                android:id="@+id/tvCategories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvUsername"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-medium"
                android:textSize="17sp"
                tools:text="Racial Justice, General" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttons"
            android:layout_below="@id/profileHeader"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/between_et"
                android:layout_toRightOf="@id/btnEditProfile"
                android:text="Logout" />

            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile" />

            <Button
                android:id="@+id/btnDonate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4867A6"
                android:layout_below="@id/btnLogout"
                android:text="donate to social good  " />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonsForOtherProfiles"
            android:layout_below="@id/buttons"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/btnFollow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/between_et"
                android:layout_toRightOf="@id/btnSendMessage"
                android:text="Follow" />

            <Button
                android:id="@+id/btnSendMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Message"
                android:paddingLeft="10dp"/>

        </RelativeLayout>




    </RelativeLayout>

</FrameLayout>